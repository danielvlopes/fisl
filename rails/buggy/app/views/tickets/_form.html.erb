<%= form_for(@ticket) do |f| %>
  <% if @ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

      <ul>
      <% @ticket.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :priority %><br />
    <%= f.select :priority, Ticket::PRIORITY %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.select :status, Ticket::STATUS %>
  </div>
  <div class="field">
    <%= f.label :project_id, "Project" %><br />
    <%= f.collection_select :project_id, @projects , :id, :name %>
  </div>

  <div class="field">
    <%= f.label :user_id, "Assigned to" %><br />
    <%= f.collection_select :user_id, @users , :id, :name %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
